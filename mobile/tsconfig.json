{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": ["es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
